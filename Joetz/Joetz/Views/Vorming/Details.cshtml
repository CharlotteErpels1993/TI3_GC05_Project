@model Joetz.Models.Domain.Vorming

@{
    ViewBag.Title = "Detail";
}

<form role="form">
    <div class="page-header">
        <h1>@ViewBag.Title</h1>
    </div>

    <div class="panel panel-default">
        <div class="panel-heading">Algemeen</div>
        <div class="container">
            <br />
            <div class="form-group">
                <label for="inputTitel">@Html.LabelFor(model => model.Titel)</label>
                <br/>
                @Html.DisplayFor(model => model.Titel)
            </div>
            <div class="form-group">
                <label for="inputKorteBeschrijving">@Html.LabelFor(model => model.KorteBeschrijving)</label>
                <br/>
                @Html.DisplayFor(model => model.KorteBeschrijving)
            </div>
            <div class="form-group">
                <label for="inputCriteriaDeelnemers">
                    @Html.LabelFor(model => model.CriteriaDeelnemers)
                </label>
                <br/>
                @Html.DisplayFor(model => model.CriteriaDeelnemers)
            </div>
            <div class="form-group">
                <label for="inputPeriodes">@Html.LabelFor(model => model.Periodes)</label>
                <br/>
                @Html.DisplayFor(model => model.Periodes)
            </div>
            <div class="form-group">
                <label for="inputLocatie">@Html.LabelFor(model => model.Locatie)</label>
                <br/>
                @Html.DisplayFor(model => model.Locatie)
            </div>
            <div class="form-group">
                <label for="inputTips">@Html.LabelFor(model => model.Tips)</label>
                <br/>
                @Html.DisplayFor(model => model.Tips)
            </div>
            <div class="form-group">
                <label for="inputPrijs">
                    @Html.LabelFor(model => model.Prijs)
            </label>
            <br/>
            @Html.DisplayFor(model => model.Prijs)
        </div>
        <div class="form-group">
            <label for="inputInbegrepenPrijs">@Html.LabelFor(model => model.InbegrepenPrijs)</label>
            <br/>
            @Html.DisplayFor(model => model.InbegrepenPrijs)
        </div>
        <div class="form-group">
            <label for="inputBetalingswijze">@Html.LabelFor(model => model.Betalingswijze)</label>
            <br/>
            @Html.DisplayFor(model => model.Betalingswijze)
        </div>
    </div>
</div>

</form>
<div class="container">
    <br />
    @Html.ActionLink("Terug naar overzicht Vormingen", "Index", "Vorming")<br /><br />
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
