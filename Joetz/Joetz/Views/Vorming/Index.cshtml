@model IEnumerable<Joetz.Models.Domain.Vorming>

@{
    ViewBag.Title = "Vormingen";
}

<div class="container">
    <br /><br />
    <div class="page-header">
        <h1><span class="glyphicon glyphicon-globe" aria-hidden="true"></span> @ViewBag.Title</h1>
    </div>
    <div class="container">
        <h6>
            <span class="glyphicon glyphicon-plus" aria-hidden="true"></span>
            @Html.ActionLink("Voeg een nieuwe vorming toe", "Create", "Vorming")<br /><br />
        </h6>
    </div>
    <table class="table table-hover">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Titel)
                </th>
                <th>Acties</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(modelItem => item.Titel)</td>
                    <td>
                        <!--GLYPHICONS!!!!-->
                        <span class="glyphicon glyphicon-edit" aria-hidden="true"></span>
                        @Html.ActionLink("Bewerken", "Edit", new { id = item.Id }) |
                        <span class="glyphicon glyphicon-list-alt" aria-hidden="true"></span>
                        @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                        <span class="glyphicon glyphicon-trash" aria-hidden="true"></span>
                        @Html.ActionLink("Verwijderen", "Delete", new { id = item.Id })
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>