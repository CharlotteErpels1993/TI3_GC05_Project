@{
    ViewBag.Title = "Monitoren";
}

<div class="container">
    <br /><br />
    <div class="page-header">
        <h1><span class="glyphicon glyphicon-globe" aria-hidden="true"></span> @ViewBag.Title</h1>
    </div>
    <div class="container">
        <h6>
            <span class="glyphicon glyphicon-plus" aria-hidden="true"></span>
            Klik hier om een monitoren bestand up te loaden
            <br /><br />
            @using (Html.BeginForm("Create", "Monitor", FormMethod.Post, new { enctype = "multipart/form-data" }))
            {
                <input type="file" name="file" value="Bestand kiezen" />
                <br />
                <input type="submit" value="Bevestigen" />
            }
        </h6>
    </div>

</div>