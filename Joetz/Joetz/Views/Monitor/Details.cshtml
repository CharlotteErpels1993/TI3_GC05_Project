@model Joetz.Models.Domain.Monitor

@{
    ViewBag.Title = "Detail";
}

@using (Html.BeginForm("Details", "Monitor", FormMethod.Post, new { role = "form" }))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)
    <div class="page-header">
        <br />
        <h1>@ViewBag.Title</h1>
    </div>

    <div class="panel panel-primary">
        <div class="panel-heading">Algemeen</div>
        <div class="container">
            <br />
            <div class="form-group">
                <label for="inputTitel">@Html.LabelFor(model => model.Naam)</label>
                <br />
                @Html.DisplayFor(model => model.Naam)
            </div>
            <div class="form-group">
                <label for="inputKorteBeschrijving">@Html.LabelFor(model => model.Voornaam)</label>
                <br />
                @Html.DisplayFor(model => model.Voornaam)

            </div>
            <div class="form-group">
                <label for="inputVervoerwijze">@Html.LabelFor(model => model.Email)</label>
                <br />
                @Html.DisplayFor(model => model.Email)

            </div>
            <div class="form-group">
                <label for="inputFormule">@Html.LabelFor(model => model.Gsm)</label>
                <br />
                @Html.DisplayFor(model => model.Gsm)
            </div>
            
    </div>
</div>

}
<div class="container">
    <br />
    @Html.ActionLink("Terug naar overzicht Monitoren", "Index", "Monitor")<br /><br />
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
