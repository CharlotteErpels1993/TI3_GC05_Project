@model IEnumerable<Joetz.Models.Domain.Vakantie>

@{
    ViewBag.Title = "Vakanties";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Voeg een nieuwe vakantie toe", "Create")
</p>
<table>
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Titel)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Titel)
        </td>
        <td>
            @Html.ActionLink("Bewerken", "Edit", new { id=item.Id }) |
            @Html.ActionLink("Details", "Details", new { id=item.Id }) |
            @Html.ActionLink("Verwijderen", "Delete", new { id=item.Id })
        </td>
    </tr>
}

</table>
