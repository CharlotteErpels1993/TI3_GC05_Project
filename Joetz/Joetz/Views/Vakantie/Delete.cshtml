@model Joetz.Models.Domain.Vakantie

@{
    ViewBag.Title = "Verwijderen vakantie";
}

<div class="container">
    <div class="well">
        <h2>@ViewBag.Title</h2>
        <h4>Weet je zeker dat je de vakantie @Model.Titel wil verwijderen?</h4>
    </div>

    <form role="form">
        <div class="container">
            <br/>
            <button type="submit" class="btn btn-default">
                <span class="glyphicon glyphicon-remove" aria-hidden="true"></span>
                Verwijderen
            </button>
            <br/><br/>
            @Html.ActionLink("Terug naar overzicht vakanties", "Index", "Vakantie")
        </div>
    </form>
    
</div>

