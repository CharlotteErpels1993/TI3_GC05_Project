@model Joetz.Models.Domain.Feedback

@{
    ViewBag.Title = "Detail";
}

@using (Html.BeginForm("Details", "Feedback", FormMethod.Post, new { role = "form" }))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)
    <div class="page-header">
        <br />
        <h1>@ViewBag.Title</h1>
    </div>

    <div class="panel panel-primary">
        <div class="panel-heading">Algemeen</div>
        <div class="container">
            <br />
            <div class="form-group">
                <label for="inputTitel">@Html.LabelFor(model => model.VakantieNaam)</label>
                <br />
                @Html.DisplayFor(model => model.VakantieNaam)
            </div>
            <div class="form-group">
                <label for="inputKorteBeschrijving">@Html.LabelFor(model => model.Score)</label>
                <br />
                @Html.DisplayFor(model => model.Score) / 5

            </div>
            <div class="form-group">
                <label for="inputVervoerwijze">@Html.LabelFor(model => model.Waardering)</label>
                <br />
                @Html.DisplayFor(model => model.Waardering)

            </div>
            <div class="form-group">
                <label for="inputFormule">@Html.LabelFor(model => model.Datum)</label>
                <br />
                @Html.DisplayFor(model => model.Datum)
            </div>
            <div class="form-group">
                <label for="inputMinLeeftijd">@Html.LabelFor(model => model.Goedgekeurd)</label>
                <br />
                @Html.DisplayFor(model => model.Goedgekeurd)
            </div>
           
        </div>
        
    </div>


}
<div class="container">
    <br />
    @Html.ActionLink("Terug naar overzicht Feedback", "Index", "Feedback")<br /><br />
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
