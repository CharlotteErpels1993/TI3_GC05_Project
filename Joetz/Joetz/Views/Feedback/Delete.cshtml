@model Joetz.Models.Domain.Feedback

@{
    ViewBag.Title = "Verwijderen feedback";
}
@using (Html.BeginForm("Delete", "Feedback", FormMethod.Post, new { role = "form" }))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)
    <div class="container">
        <div class="well">
            <br />
            <h2>@ViewBag.Title</h2>
            <h4>Weet je zeker dat je de funfactor van @Model.VakantieNaam met score @Model.Score wil verwijderen?</h4>
        </div>

        <form role="form">
            <div class="container">
                <br />
                <button type="submit" class="btn btn-default">
                    <span class="glyphicon glyphicon-remove" aria-hidden="true"></span>
                    Verwijderen
                </button>
                <br /><br />
                @Html.ActionLink("Terug naar overzicht funfactor", "Index", "Feedback")
            </div>
        </form>

    </div>
}

