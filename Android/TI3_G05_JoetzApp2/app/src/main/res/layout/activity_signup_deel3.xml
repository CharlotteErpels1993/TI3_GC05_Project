<?xml version="1.0" encoding="utf-8"?>
<ScrollView

    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:finishOnTaskLaunch="true"
    xmlns:android="http://schemas.android.com/apk/res/android">
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/LoginFormContainer">

    <EditText
        android:id="@+id/VoornaamSignu"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp"
        android:hint="@string/naamHint"/>

    <EditText
        android:id="@+id/NaamSignu"

        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/VoornaamSignu"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp"
        android:hint="@string/famnaamHint" />

    <EditText
        android:id="@+id/StraatSignu"

        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/NaamSignu"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp"
        android:hint="@string/straatHint" />

    <EditText
        android:id="@+id/HuisnrSignu"
        android:inputType="number"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/StraatSignu"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp"
        android:hint="@string/huisnrHint" />

    <EditText
        android:id="@+id/BusSignu"
        android:inputType="number"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/HuisnrSignu"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp"
        android:hint="@string/BusHint" />

    <EditText
        android:id="@+id/GemeenteSignu"

        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/BusSignu"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp"
        android:hint="@string/gemeenteHint" />

    <EditText
        android:id="@+id/PostcodeSignu"
        android:inputType="number"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/GemeenteSignu"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp"
        android:hint="@string/postcodeHint" />

    <EditText
        android:id="@+id/TelefoonSignu"
        android:inputType="number"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/PostcodeSignu"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp"
        android:hint="@string/telefoonHint" />

    <EditText
        android:id="@+id/GsmSignu"
        android:inputType="number"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/TelefoonSignu"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp"
        android:hint="@string/gsmHint" />



    <Button
        android:background="@drawable/button_shape"
        android:id="@+id/btnNaarDeel4"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/GsmSignu"
        android:layout_marginTop="25dp"
        android:textColor="@color/Rood"
        android:text="@string/volgende" />


</RelativeLayout>
    </ScrollView>