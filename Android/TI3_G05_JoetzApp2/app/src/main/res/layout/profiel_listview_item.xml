<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">


    <TextView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"/>
    <ImageView
        android:id="@+id/afbeelding"
        android:layout_width="160dp"
        android:layout_height="160dp"
        android:layout_alignParentStart="true"
        android:padding="1dp"
        android:src="@drawable/profielftoplaceholder"/>



    <TextView
        android:id="@+id/lidNr"
        android:layout_marginEnd="100dp"
        android:layout_alignParentEnd="true"
        android:textSize="20sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        />
    <TextView
        android:id="@+id/achternaam"
        android:layout_marginEnd="100dp"
        android:layout_alignParentEnd="true"
        android:textSize="20sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/lidNr"
        />


    <TextView
        android:id="@+id/voornaam"
        android:layout_marginEnd="100dp"
        android:textSize="20sp"
        android:layout_alignParentEnd="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/achternaam"/>


    <TextView
        android:id="@+id/straat"
        android:layout_marginEnd="100dp"
        android:textSize="15sp"
        android:layout_alignParentEnd="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_below="@id/voornaam"/>

    <TextView
        android:id="@+id/huisnr"
        android:layout_marginEnd="100dp"
        android:textSize="15sp"
        android:layout_alignParentEnd="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/straat"/>

    <TextView
        android:id="@+id/postcode"
        android:layout_marginEnd="100dp"
        android:textSize="15sp"
        android:layout_alignParentEnd="true"
        android:layout_below="@id/huisnr"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>


    <TextView
        android:id="@+id/gemeente"
        android:layout_marginEnd="100dp"
        android:textSize="15sp"
        android:layout_below="@id/postcode"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"/>


</RelativeLayout>