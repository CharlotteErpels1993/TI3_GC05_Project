<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/LoginFormContainer"
    android:layout_height="fill_parent"
    android:finishOnTaskLaunch="true">

    <TextView
        android:id="@+id/signupRijksRegisterNummerLabel"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="@string/rijksregnr"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_alignParentTop="true"
        />

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:layout_marginTop="8dp"
        android:layout_below="@+id/signupRijksRegisterNummerLabel"
        android:id="@+id/rijksRegNrRegistreren"/>

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/bondMoyson"
        android:id="@+id/textViewLid"
        android:layout_below="@id/rijksRegNrRegistreren"
        android:layout_marginTop="15dp"
        android:layout_alignParentStart="true"/>

    <RadioGroup
        android:id="@+id/radioGroup"

        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@id/textViewLid">

  <RadioButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/ja"
        android:id="@+id/radioButtonJa"

          />

    <RadioButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/nee"
        android:id="@+id/radioButtonNee" />
    </RadioGroup>

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/signup_melding_monitor"
        android:id="@+id/txtWaarschuwingMonitor"
        android:layout_below="@+id/radioGroup"
        android:layout_centerHorizontal="true" />




</RelativeLayout>