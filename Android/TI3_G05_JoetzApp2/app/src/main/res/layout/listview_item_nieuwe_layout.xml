<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">

<TextView
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" />
    <ImageView
        android:id="@+id/afbeelding"
        android:layout_width="fill_parent"
        android:layout_height="300dp"

        android:padding="1dp"/>


   <TextView
        android:id="@+id/naam"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
       android:layout_below="@id/afbeelding"
       android:layout_centerHorizontal="true"
       android:textSize="20sp"
         />


    <TextView
        android:id="@+id/locatie"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/naam"/>

    <TextView
        android:id="@+id/doelgroep"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/locatie"/>


    <TextView
        android:id="@+id/vertrekdatum"
        android:visibility="invisible"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/terugdatum"
        android:visibility="invisible"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/kortbijschrift"
        android:visibility="invisible"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>


    <TextView
        android:id="@+id/prijs"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_below="@id/doelgroep"
        android:layout_height="wrap_content"/>


</RelativeLayout>