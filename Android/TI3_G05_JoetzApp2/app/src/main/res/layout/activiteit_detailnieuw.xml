<?xml version="1.0" encoding="utf-8"?>
<ScrollView

    android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">


    <HorizontalScrollView
        android:id="@+id/scrollView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp" >
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/afbeelding1"
            android:layout_width="250dp"
            android:layout_height="200dp"
            android:src="@drawable/vakantieftoplaceholder"
            android:padding="1dp" />
        <ImageView
            android:id="@+id/afbeelding2"
            android:layout_width="250dp"
            android:layout_height="200dp"
            android:layout_marginStart="30dp"
            android:src="@drawable/vakantieftoplaceholder"
            android:padding="1dp" />
        <ImageView
            android:id="@+id/afbeelding3"
            android:layout_width="250dp"
            android:layout_height="200dp"
            android:layout_marginStart="30dp"
            android:src="@drawable/vakantieftoplaceholder"
            android:padding="1dp" />
        </LinearLayout>
    </HorizontalScrollView>

    <RelativeLayout
        android:id="@+id/lay"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/scrollView">

        <TextView
            android:layout_width="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_height="wrap_content"
            android:id="@+id/titel"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Titel"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/beschrijving"
            android:layout_below="@id/titel"
            android:layout_marginTop="10dp"
            android:text="Right side"
            android:textAlignment="center"
            android:layout_centerHorizontal="true"/>

        <TextView
            android:id="@+id/vertrekdatum"
            android:layout_width="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_height="wrap_content"
            android:text="vertrekdatum"
            android:layout_marginTop="10dp"
            android:textAlignment="center"
            android:layout_below="@id/beschrijving"/>

        <TextView
            android:id="@+id/terugkeerdatum"
            android:layout_width="wrap_content"
            android:layout_centerHorizontal="true"
            android:textAlignment="center"
            android:text="terugkeerdatum"
            android:layout_height="wrap_content"
            android:layout_below="@id/vertrekdatum"
            android:layout_marginTop="10dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/periode"
            android:text="periode"
            android:layout_below="@id/terugkeerdatum"
            android:layout_marginTop="10dp"
            android:textSize="15sp"
            android:layout_centerHorizontal="true"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/vervoer"
            android:layout_below="@id/periode"
            android:layout_marginTop="10dp"
            android:text="Right side"
            android:layout_centerHorizontal="true"/>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/formule"
            android:layout_marginTop="10dp"
            android:layout_below="@id/vervoer"
            android:text="Right side"
            android:layout_centerHorizontal="true"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/locatiev"
            android:layout_marginTop="10dp"
            android:layout_below="@id/formule"
            android:text="Right side"
            android:layout_centerHorizontal="true"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/doelgroepv"
            android:layout_marginTop="10dp"
            android:layout_below="@id/locatiev"
            android:textSize="20sp"
            android:text="Right side"
            android:layout_centerHorizontal="true"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/maxDeelnemers"
            android:layout_marginTop="10dp"
            android:layout_below="@id/doelgroepv"
            android:text="max deelnemers"
            android:layout_centerHorizontal="true"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/inbegrepenInPrijs"
            android:layout_marginTop="10dp"
            android:layout_below="@id/maxDeelnemers"
            android:text="InbegrepenInPrijs"
            android:layout_centerHorizontal="true"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/basisprijs"
            android:text="Normale prijs"
            android:layout_marginTop="10dp"
            android:layout_below="@id/inbegrepenInPrijs"
            android:layout_centerHorizontal="true"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/bondMoysonLedenPrijs"
            android:layout_marginTop="10dp"
            android:layout_below="@id/basisprijs"
            android:text="bondMoysonLedenPrijs"
            android:layout_centerHorizontal="true"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/sterPrijs1Ouder"
            android:layout_marginTop="10dp"
            android:layout_below="@id/bondMoysonLedenPrijs"
            android:text="sterPrijs1Ouder"
            android:layout_centerHorizontal="true"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/sterPrijs2Ouders"
            android:layout_marginTop="10dp"
            android:layout_below="@id/sterPrijs1Ouder"
            android:text="sterPrijs2Ouders"
            android:layout_centerHorizontal="true"/>

    </RelativeLayout>

