    <Button
        android:text="@string/meerInfo"
        android:id="@+id/btnMeerInfo"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/verberg2"/>
    <Button
        android:text="@string/minderInfo"
        android:id="@+id/btnMinderInfo"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/btnMeerInfo"/>

    <Button
        android:text="@string/inschrijven"
        android:id="@+id/btnInschrijvenV"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/btnMinderInfo"/>


</RelativeLayout>
    </ScrollView>