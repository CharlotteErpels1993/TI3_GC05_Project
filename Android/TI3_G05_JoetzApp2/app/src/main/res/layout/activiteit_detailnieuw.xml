    <Button
        android:text="Inschrijven"
        android:id="@+id/btnInschrijvenV"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/lay"/>


</RelativeLayout>
    </ScrollView>